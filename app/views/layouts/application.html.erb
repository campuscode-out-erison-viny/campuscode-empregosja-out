<!DOCTYPE html>
<html>
  <head>
    <title>Emprego já</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to root_path do %>
      <h1 class="title">Emprego Já</h1>
    <% end %>

    <% if flash[:notice] %>
      <div class="message">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
