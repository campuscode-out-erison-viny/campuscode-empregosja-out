<div id="job-new" class="page">  
  <h2>Nova Vaga</h2>
  <hr>

  <%= form_for @job do |f| %>
    <div class="row clearfix">
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title, required: true%>
    </div>

    <div class="row clearfix">
      <%= f.label :company_id, 'Empresa' %>
      <%= f.collection_select(:company_id, @companies, :id, :name, { prompt: true }, required: true) %>
    </div>

    <div class="row clearfix">
      <%= f.label :location, 'Localização' %>
      <%= f.text_field :location, required: true %>
    </div>
    
    <div class="row clearfix">
      <%= f.label :category, 'Categoria' %>
      <%= f.text_field :category, required: true %>
    </div>

    <div class="row clearfix">
      <%= f.label :description, 'Descrição' %>
      <%= f.text_area :description, required: true %>
    </div>

    <div class="row clearfix">
      <%= f.label :featured, 'Destaque: ' %>
      <%= f.check_box :featured %>
    </div>
    
    <div class="buttons clearfix">
      <%= f.submit 'Criar Vaga' %> 
      <%= link_to 'Voltar', root_path %>
    </div>
  <% end %>
  
</div>
