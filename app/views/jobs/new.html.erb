<div id="form-body" class="page">  
  <h2>Nova Vaga</h2>
  <hr>

  <% if flash[:notice] %>
    <div class="message">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for @job do |f| %>
    <div class="row clearfix">
      <%= f.label :title, 'Título' %>
      <%= f.text_field :title %>
    </div>

    <div class="row clearfix">
      <%= f.label :company_id, 'Empresa' %>
      <%= f.collection_select(:company_id, @companies, :id, :name, { prompt: true }) %>
    </div>

    <div class="row clearfix">
      <%= f.label :location, 'Localização' %>
      <%= f.text_field :location  %>
    </div>
    
    <div class="row clearfix">
      <%= f.label :category, 'Categoria' %>
      <%= f.text_field :category  %>
    </div>

    <div class="row clearfix">
      <%= f.label :description, 'Descrição' %>
      <%= f.text_area :description  %>
    </div>

    <div class="row clearfix">
      <%= f.label :featured, 'Destaque: ' %>
      <%= f.check_box :featured %>
    </div>
    
    <div class="buttons clearfix">
      <%= f.submit 'Criar Vaga' %> 
      <%= link_to 'Voltar', root_path %>
    </div>
  <% end %>
  
</div>
