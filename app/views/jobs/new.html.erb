<div id="home-body" class="page">
  <h1 class="title">Emprego Já</h1>
  <h2>Nova Vaga</h2>
  <%= form_for @job do |f| %>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
    
    <%= f.label :company, 'Empresa' %>
    <%= f.text_field :company %>
    <%= f.label :location, 'Localização' %>
    <%= f.text_field :location %>
    <%= f.label :category, 'Categoria' %>
    <%= f.text_field :category %>
    <%= f.label :description, 'Descrição' %>
    <%= f.text_area :description %>
    <%= f.submit 'Criar Vaga' %> <%= link_to 'Voltar', root_path %>
  
  <% end %>
</div>