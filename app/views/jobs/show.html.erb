<div id="job-body" class="page">
  <h1 class="title-job">
    <%= @job.title %>
    
    <% if @job.featured %>
      <div class="featured">
        <strong>Destaque</strong>
      </div>
    <% end %>

  </h1>
  <hr>

  <% if @job.expired? %>
    <div class="expired">
      <strong>Vaga Expirada</strong>
    </div>
  <% end %>

  <div class="clearfix">
    <dl>
      <div class="row">
        <dt>Empresa:</dt>
        <dd><%= @job.company.name %></dd>
      </div> 
      
      <div class="row">
        <dt>Localização:</td>
        <dd><%= @job.location %></dd>
      </div>
      <div class="row">
        <dt>Categoria:</dt>
        <dd><%= @job.category.name %></dd>
      </div>
      <div class="row">
        <dt>Descrição completa:</dt>
        <dd><%= @job.description %></dd>
      </div>
    </dl>
  </div>

  <div class="buttons clearfix">
    <%= link_to 'Editar', edit_job_path(@job) %>
    <%= link_to 'Voltar', root_path %>
  </div>
</div>