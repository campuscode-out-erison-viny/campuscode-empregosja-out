<div id="job-body" class="page">
  <h1  class="title">Emprego Já</h1>

  <h1 class="title-job">
    <%= @job.title %>
    
    <% if @job.featured %>
      <div class="featured">
        <strong>Destaque</strong>
      </div>
    <% end %>
  </h1>
  <hr>

  <div class="job-container">
    <table>
      <tr>
        <td class="title">Empresa:</td><td><%= @job.company %></td>
      </tr>  
      <tr>
        <td class="title">Localização:</td> <td><%= @job.location %></td>
      </tr>
      <tr>
        <td class="title">Categoria:</td> <td><%= @job.category %></td>
      </tr>
      <tr>
        <td class="title">Descrição completa:</td> <td><%= @job.description %></td>
      </tr>
    </table>
  </div>

  <%= link_to 'Voltar', root_path %>
</div>
