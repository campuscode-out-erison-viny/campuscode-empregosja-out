<div id="job-body" class="page">
  <h1 class="title-job">
    <%= @job.title %>
    
    <% if @job.featured %>
      <div class="featured">
        <strong>Destaque</strong>
      </div>
    <% end %>
  </h1>
  <hr>

  <div class="job-container clearfix">
    <dl>
      <div class="row">
        <dt>Empresa:</dt>
        <dd><%= @job.company.name %></dd>
      </div> 
      
      <div class="row">
        <dt>Localização:</td>
        <dd><%= @job.location %></dd>
      </div>
      <div class="row">
        <dt>Categoria:</dt>
        <dd><%= @job.category.name %></dd>
      </div>
      <div class="row">
        <dt>Descrição completa:</dt>
        <dd><%= @job.description %></dd>
      </div>
    </dl>
  </div>

  <%= link_to 'Voltar', root_path %>
</div>