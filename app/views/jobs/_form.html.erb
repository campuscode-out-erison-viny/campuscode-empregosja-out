<% if flash[:notice] %>
  <div class="message">
    <%= flash[:notice] %>
  </div>
<% end %>
  
<%= form_for @job do |f| %>
  <div class="row clearfix">
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>
  </div>

  <div class="row clearfix">
    <%= f.label :company_id, 'Empresa' %>
    <%= f.collection_select(:company_id, @companies, :id, :name, { prompt: true }) %>
  </div>

  <div class="row clearfix">
    <%= f.label :location, 'Localização' %>
    <%= f.text_field :location  %>
  </div>
  
  <div class="row clearfix">
    <%= f.label :category_id, 'Categoria' %>
    <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: true}) %>
  </div>

  <div class="row clearfix">
    <%= f.label :description, 'Descrição' %>
    <%= f.text_area :description  %>
  </div>

  <div class="row clearfix">
    <%= f.label :featured, 'Destaque: ' %>
    <%= f.check_box :featured %>
  </div>
  
  <div class="buttons clearfix">
    <%= f.submit submit_text %> 
    <%= link_to 'Voltar', root_path %>
  </div>
<% end %>