<div id="home-body" class="page">

  <% @jobs.each do |job| %>
    <div class="job-container">
      <% if job.featured %>
        <div class="featured">
          <strong>Destaque</strong>
        </div>
      <% end %>
      
      <h1><%= link_to job.title, job %></h1>

      <p><%= job.company.name %></p>
      <p><%= job.location %></p>
    </div>
  <% end %>

</div>

<aside>
  <h1>Empresas</h1>
  
  <ul>
    <% @companies.each do |c| %>
    <li><%= link_to c.name, c %></li>
    <% end %>
  </ul>
</aside>
