<div id="home-body" class="page">
  <div class="container">
    <div class="jobs-container">
      <%= render @jobs %>
    </div>

    <div class="links clearfix">
      <%= link_to 'Criar vaga', new_job_path %>
    </div>
  </div>
  
  <div class="menus">
    <aside>
      <h1>Empresas</h1>
      
      <ul>
        <% @companies.each do |company| %>
        <li><%= link_to company.name, company %></li>
        <% end %>
      </ul>
    </aside>

    <aside>
      <h1>Categorias</h1>

      <ul>
        <% @categories.each do |category| %>
          <li><%= link_to category.name, category %></li>
        <% end %>
      </ul>
    </aside>
  </div>
</div>


