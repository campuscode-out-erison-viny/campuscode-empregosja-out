<div id="home-body" class="page">

  <div class="jobs-container">
    <%= render @jobs %>
  </div>
  
  <aside>
    <h1>Empresas</h1>
    
    <ul>
      <% @companies.each do |company| %>
      <li><%= link_to company.name, company %></li>
      <% end %>
    </ul>
  </aside>

  <aside>
    <h1>Categorias</h1>

    <ul>
      <% @categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
  </aside>
</div>


